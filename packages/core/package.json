{
  "name": "@haro/jpform-core",
  "version": "0.1.0",
  "description": "Core utilities for Japanese business forms - converters, validators, and types",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "japanese",
    "form",
    "validation",
    "converter",
    "hankaku",
    "zenkaku",
    "kana"
  ],
  "author": "Hideki Matsuoka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/haro/jpform.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  }
}
